<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="employeesTable"
        messagesPack="com.haulmont.sample.petclinic.web.employee.employee">
    <data readOnly="true">
        <collection id="employeesDc"
                    class="com.haulmont.sample.petclinic.entity.employee.Employee"
                    view="_local">
            <loader id="employeesDl">
                <query>
                    <![CDATA[select e from petclinic_Employee e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="employeesTable"
            spacing="true">
        <filter id="filter"
                applyTo="employeesTable"
                dataLoader="employeesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="employeesTable"
                    width="100%"
                    dataContainer="employeesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="createSingleEditor"
                        caption="msg://createSingleEditor"
                        icon="ADD_ACTION"
                />
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="birthdate"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="employeesTable.create"/>
                <button id="createSingleEditorBtn" action="employeesTable.createSingleEditor"/>
                <button id="editBtn" action="employeesTable.edit"/>
                <button id="removeBtn" action="employeesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
